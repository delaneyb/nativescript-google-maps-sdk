{
    "compilerOptions": {
        "target": "ES2017",
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "diagnostics": true,
        "pretty": true,
        "suppressImplicitAnyIndexErrors": true,
        "inlineSourceMap": true,
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "skipLibCheck": true,
        "plugins": [{
            "transform": "./ns-transform-native-classes.ts",
            "type": "raw"
        }],
        "lib": [
            "es6",
            "dom"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "include": [
        "./"
    ],
    "exclude": [
        "node_modules",
        "platforms",
        "demo",
        "ng-demo",
        "ns-transform-native-classes.ts"
    ]
}
